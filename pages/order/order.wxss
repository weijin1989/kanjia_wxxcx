.nav {
  display: flex;
  text-align: center;
}
.container{
  margin:0;
}
.nav .li{
  flex:1;
}
.nav .li text{
  font-size:28rpx;
  font-weight:500;
  color:rgba(107,107,107,1);
  line-height:56rpx;
  padding-bottom:10rpx;
}
.nav .li text.open{
  border-bottom:4rpx solid #E72318;
}
.order_list{
  margin:0 12rpx;
}
.order_list .list .h1 label{
  font-size:30rpx;
  font-family:Source Han Sans SC;
  font-weight:500;
  color:rgba(0,0,0,1);
  line-height:56rpx;
  display: flex;
  align-items: center;
}
.order_list .list{
  padding:18rpx 24rpx;
}
.order_list .list .h1{
  padding:20rpx 0 10rpx 0;
  border-bottom:1px solid #E4E4E4;
  position: relative;
}
.order_list .list .h1 .order_start{
  position: absolute;
  right:0;
  top:22rpx;
  font-size:28rpx;
  line-height:56rpx;
  color:#878787
}
.order_list .list .h1 label image{
  width: 33rpx;
  height:31rpx;
  margin-right:10rpx;
}
.order_list .list .bottom{
  position: relative;
  padding:19rpx 0 19rpx 152rpx;
  font-size:26rpx;
  font-weight:400;
  line-height:56rpx;
}
.order_list .list .bottom image{
  position: absolute;
  left:0;
  top:19rpx;
  width:123rpx;
  height:115rpx;
  border-radius:6rpx;
}
.order_list .list .bottom text{
  display: block;
  color:rgba(122,122,122,1);
  height: 55rpx;
}
.order_list .list .bottom label{
  color:#313232;
  display: block;

}