              <!-- <image src='../../images/icon10.png' wx:else></image>
            </view>
            <text>4分</text>  -->
            {{item.mername}}
            <!-- <text class="ri">{{item.mername}}</text> -->
          </view>
          <view class="price">￥{{item.price}}<text>￥{{item.costprice}}</text></view>
        </view>
      </view>

    </view>
    
    <!--列表-->
  </view>
</view>