<view class="container">
  <view class="modalDlg" wx:if="{{is_showModal}}">
    <button open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber" class="getPhoneNumber"> 使用微信登录 </button>
  </view>

  <view class="top bg_fff br_12">
    <view class="search">
      <input type="text" placeholder-class="s_but_placeholder" bindtap="search" bindconfirm="changeCon" class="s_but" confirm-type='search' placeholder="搜索店铺名或者菜名"></input>
      <icon class="searchIcon"  color="#A3A3A3" size="18" type="search"></icon>
    </view>
    <!--正在抢购-->
    <view class="panic_buying">
      <view class="h1">
        <image class="wz" src="../../images/text1.png" ></image>
        <label>更多 <image class="returnImg" src="../../images/icon9.png" ></image></label>
      </view>
      <view class="ul cf">
        <view class="li" bindtap="toProductInfo" data-id='1'>
          <view class="qg_img"><image  src="../../images/bg.png" ></image></view>
          <label class="name">预售提前抢购.[29.9吃..</label>
          <view class="introduction">最地道的小龙虾 <text>6.5km</text></view>
          <view class="price">￥29.90<text>￥88.88</text></view>
        </view>
        <view class="li" bindtap="toProductInfo" data-id='1'>
          <view class="qg_img"><image  src="../../images/bg.png" ></image></view>
          <label class="name">预售提前抢购.[29.9吃..</label>
          <view class="introduction">最地道的小龙虾 <text>6.5km</text></view>
          <view class="price">￥29.90<text>￥88.88</text></view>
        </view>
      </view>
    </view>
  </view>
  <!--附近美食-->
  <view class="nearby bg_fff br_12">
    <view class="nearby_title"><image src="../../images/text2.png"></image></view>
    <scroll-view class="nearby_nav" scroll-x="true" scroll-left="{{x}}" scroll-with-animation="{{true}}">
      <view class='lis {{item.catid == type_id?"cur":""}}' wx:for="{{nav_list}}"  wx:key="{{item.catid}}"  data-type="{{item.catid}}" bindtap='switchTap' data-index="{{index}}">
          <view>{{item.name}}</view>
      </view>
    </scroll-view>
    <view class="list bg_fff">

      <view class="list_li cf" wx:for="{{cp_list}}"  wx:key="{{item.shopid}}"  data-type="{{item.subject}}" data-index="{{index}}">
        <view class="left"  bindtap="toProductInfo" data-id='{{item.shopid}}'><image  src="{{item.imgsrc}}" ></image></view>
        <view class="right">
          <view class="h2">{{item.subject}}</view>
          <view class="introduction">{{item.mername}} <text>6.5km</text></view>
          <view class="cf">
            <view class="stock">已售{{item.residue}}件 <text>仅剩{{item.num}}件</text></view>
          </view>
          <view class="price">￥{{item.price}}<text>￥{{item.costprice}}</text></view>
          <view class="but">
            <button class="buts but1" bindtap="toProductInfo" data-id='{{item.shopid}}'>立即购买</button>
            <button class="buts but2">我要砍价</button>
          </view>
        </view>
      </view>


    </view>
  </view>
